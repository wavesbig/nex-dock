generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  authorId  Int
  author    User    @relation(fields: [authorId], references: [id])
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  posts Post[]
}

model SearchEngine {
  key       String   @id
  name      String
  url       String
  sort      Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  settings SearchSetting[]
}

model SearchSetting {
  id                Int      @id
  selectedEngineKey String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  selectedEngine SearchEngine? @relation(fields: [selectedEngineKey], references: [key], onDelete: SetNull)
}
